# Environment Variables Template
# Copy this file to .env and fill in your actual API keys and credentials

# Exchange API Keys
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here
COINBASE_API_KEY=your_coinbase_api_key_here
COINBASE_SECRET_KEY=your_coinbase_secret_key_here

# Data Sources
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here

# Trading Configuration
TRADING_MODE=simulation  # simulation or live
DEFAULT_SYMBOLS=BTCUSDT,ETHUSDT,ADAUSDT,SOLUSDT
MAX_POSITION_SIZE=0.02  # Maximum 2% of portfolio per position
STOP_LOSS_PERCENTAGE=0.02  # 2% stop loss
TAKE_PROFIT_PERCENTAGE=0.05  # 5% take profit

# Model Configuration
MODEL_PATH=models/price_predictor.tflite
CONFIDENCE_THRESHOLD=0.7
PREDICTION_HORIZON=5  # minutes

# System Configuration
LOOP_INTERVAL=30  # seconds between iterations
ENABLE_DASHBOARD=true
DASHBOARD_PORT=8000
LOG_LEVEL=INFO

# Notifications (Optional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here
ENABLE_NOTIFICATIONS=false

# Database (Optional)
DATABASE_URL=sqlite:///data/trading_data.db

# Risk Management
MAX_DAILY_LOSS=0.05  # Maximum 5% daily loss
MAX_DRAWDOWN=0.10  # Maximum 10% drawdown
POSITION_SIZING_METHOD=kelly  # kelly, fixed, volatility
